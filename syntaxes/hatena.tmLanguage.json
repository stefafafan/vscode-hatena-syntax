{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hatena",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#heading"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.hatena",
				"match": "\\b(tex|contents|google|image|news|wikipedia|id|detail|large|question|title|f|plain|alt|isbn|asin)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.hatena",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.hatena",
					"match": "\\\\."
				}
			]
		},
		"heading": {
			"patterns": [{
				"name": "markup.heading.hatena",
				"match": "^(\\*{1,3}[^\\*]*)$\\n?"
			}]
		}
	},
	"scopeName": "source.hatena"
}